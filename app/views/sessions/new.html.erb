
<div class="row">
    <h1>Log in</h1>
    <div class="signup-form">
        <%= form_for(:session, url: login_path) do |f| %>
            <%= f.label :email %>
            <%= f.email_field :email %>
            
            <%= f.label :password %>
            <%= f.password_field :password %>
            
            <%= f.submit "Log in", class: "btn btn-ghost" %>
        <% end %>
        <p>New user? <%= link_to "Sign up", signup_path, class: "btn btn-ghost" %></p>
    </div>
</div>