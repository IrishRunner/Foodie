<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= product.name %></h4>
    </div>
    <div class="col-xs-4">

      <%= form_for order_item, remote: true do |f| %>
        <h4 >Meal Price: <%= number_to_currency order_item.unit_price %></h4>
        <div class="row">
          <div class="col span-1-of-4">
            <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
            <%= f.hidden_field :product_id, value: product.id %>
          </div>
          <div class="col span-1-of-4">
            <div >
              <%= f.submit "Change", class: "mybtn mybtn-full mybtn-small" %>
              <%= link_to "Remove", order_item, { data: { confirm: "Are you sure you wish to delete the product '#{order_item.product.name}' from your cart?" }, method: :delete, remote: true, class: "mybtn mybtn-ghost mybtn-small" } %>
            </div>
          </div>
        </div>
        <h4 class="text-right">Price: <%= number_to_currency order_item.total_price %></h4>
      <% end %>
    </div>

  </div>
</div>